<IfModule mod_rewrite.c>
    RewriteEngine On

    # Change this if your project is in a subfolder
    RewriteBase /

    # Redirect to HTTPS if you want (optional)
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Send requests that are not files or directories to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]

</IfModule>

<IfModule !mod_rewrite.c>
    # If mod_rewrite is not available, show error
    ErrorDocument 404 index.php
</IfModule>
